---
import Logo from '/Logo.png';
---

<nav>
  <div class="navbar-container">
    <a href="#">
      <img src={Logo} alt="Logo PrismaKu"/>
    </a>
    <ul>
      <li class="navbar-list">
        <a href="#">Kebijakan Privasi</a>
      </li>
    </ul>
  </div>
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    width: 100%;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,.2);
  }

  .navbar-container {
    display: flex;
    justify-content: space-between;
    padding: 0.25rem 3rem; 
    background-color: #ffffff;
  }

  .navbar-container a {
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
  }

  .navbar-container img {
    width: 70%;
    height: auto;
  }

  .navbar-container ul {
    display: flex;
    list-style: none;
    align-items: center;
  }

  .navbar-container .navbar-list {
    padding-left: 1rem;
    font-size: var(--p-normal);
    margin-block-start: 0rem;
    line-height: 0rem;
  }

  .navbar-container ul .navbar-list a {
    text-decoration: none;
    color: black;
  }


  @media only screen and (max-width: 576px) {
    .navbar-container {
      padding: 0.25rem 1rem;
    }

    .navbar-container ul {
      display: none;
    }
  }
</style>