---
import Navbar from '../components/Navbar.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "@fontsource/inter"

export interface Props {
	title: string;
}

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>
	<body>
    <Navbar/>
    <div class="container">
      <Header date={frontmatter.date} title={frontmatter.title} />
      <slot />
    </div>
    <hr/>
    <Footer />
	</body>
</html>

<style>
	:root {
    --h1-responsive: 28px;
    --h2-responsive: 20px;
    --h3-responsive: 16px;
    --p-responsive: 14px;
    --h1-normal: 32px;
    --h2-normal: 24px;
    --h3-normal: 18px;
    --p-normal: 16px;
		--color-text: rgb(59, 59, 59);
		--color-bg: hsl(0, 0%, 100%);
		--color-border: hsl(17, 24%, 90%);
	}

	html {
		font-family: "Inter", sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin-left: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-top: 5rem;
    padding: 0;
	}

  .container {
    margin: 0 auto;
    width: 70%;
    padding-bottom: 4rem;
  }

  @media only screen and (max-width: 576px) {
    .container {
      width: 90%;
    }
  }

</style>

<style is:global>
	h1 {
		font-size: var(--h1-normal);
	}

	h2 {
		font-size: var(--h2-normal);
    margin-block-start: 3.5rem;
    margin-block-end: 0rem;
	}

  h3 {
    font-size: var(--h3-normal);
    margin-block-start: 1rem;
    margin-block-end: 0rem;
  }

  p {
    font-size: var(--p-normal);
    margin-block-start: 0.75rem;
    line-height: 1.5rem;
  }

  li {
    font-size: var(--p-normal);
    margin-block-start: 0.75rem;
    line-height: 1.5rem;
  }

  @media only screen and (max-width: 576px) {
    h1 {
      font-size: var(--h1-responsive);
	  }

    h2 {
      font-size: var(--h2-responsive);
    }

    h3 {
      font-size: var(--h3-responsive);
    }

    p {
      font-size: var(--p-responsive);
    }

    li {
      font-size: var(--p-normal);
    }
  }
</style>
